[Problem]
Name = test
RootName = ../rootsystem_stomata/input/test.input
SoilName = ../soil_stomata/input/test.input

[TimeLoop]
TEnd = 604800 # a day 86400 [s], a week 604800 [s], two weeks 1209600 [s]
DtInitial = 7200 # [s]
PeriodicCheckTimes = 3600
MaxTimeStepSize = 3600

[RootSystem.Grid]
File =  Zea_mays_4_Leitner_2014
InitialT = 20 # days

[RootSystem.Conductivity]
Kx = 4.3      # axial conductivity [cm^4/hPa/day] similar (cm^3 / day) 
Kr = 7.5e-2     # radial conductivity [cm/hPa/day] similar (1 / day) 

[RootSystem.Collar]
Transpiration = 2.36478e-07 # kg/day 
Sinusoidal = True

# 75 x 15 x 126 cm
[Soil.Grid]
LowerLeft = -0.375 -0.075 -1.26
UpperRight = 0.375 0.075 0.0
Cells = 37 8 63

[Soil.IC]
P = -2000

[Soil.VanGenuchten]
Qr = 0.0045
Qs = 1
Alpha = 2e-4
N = 1.41
Ks = 10.7 # cm/day

[Control]
cD = 0 # 0 -> interaction between pressure and chemical regulation

[Component]
liquidDiffCoeff = 1.2e-9
MolarMass = 0.26432 # Molar mass of ABA is 264.321 g/mol
